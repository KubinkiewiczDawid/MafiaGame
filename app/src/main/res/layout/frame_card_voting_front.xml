<layout>
    <FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:id="@+id/cardVotingFrontLayout">

        <ImageView
            android:id="@+id/front_card_background"
            android:layout_width="350dp"
            android:layout_height="match_parent"
            android:padding="16dp"
            android:layout_gravity="center_horizontal"
            android:src="@drawable/card_shape"/>

        <TextView
            android:id="@+id/votePlayerNameText"
            style="@style/Base.TextAppearance.AppCompat.Display1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginBottom="100dp"
            android:textColor="@color/black"
            android:textSize="55sp"
            android:fontFamily="@font/stencil1935"/>

        <TextView
            style="@style/Base.TextAppearance.AppCompat.Display1"
            android:id="@+id/votingTextInfo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:fontFamily="@font/stencil1935"
            android:gravity="center"
            android:text="@string/swipe_to_vote"
            android:textColor="@color/black"
            android:textSize="40sp"/>

        <ImageView
            android:id="@+id/votingTextArrow"
            android:layout_width="190dp"
            android:layout_height="60dp"
            android:layout_gravity="center"
            android:src="@drawable/right_arrow"
            android:layout_marginTop="70dp" />

    </FrameLayout>
</layout>
