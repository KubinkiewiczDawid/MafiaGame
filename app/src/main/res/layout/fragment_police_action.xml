<?xml version="1.0" encoding="utf-8"?>
<layout>
    <androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/policeActionLayout">

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="120dp"
            android:layout_height="360dp"
            android:background="@drawable/white_rectangle_with_black_boarder"
            android:backgroundTint="@color/darkerBlue"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/playerButtons"/>

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/choose_who_to_check"
            android:textColor="@color/white"
            android:fontFamily="@font/stencil1935"
            android:textSize="42sp"
            android:rotation="90"
            app:layout_constraintBottom_toBottomOf="@+id/imageView"
            app:layout_constraintEnd_toEndOf="@+id/playerButtons"
            app:layout_constraintStart_toStartOf="@+id/imageView"
            app:layout_constraintTop_toTopOf="@+id/imageView"
            android:paddingTop="200dp"/>

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/choose_who_to_check"
            android:textColor="@color/white"
            android:fontFamily="@font/stencil1935"
            android:textSize="42sp"
            android:rotation="270"
            app:layout_constraintBottom_toBottomOf="@+id/imageView"
            app:layout_constraintEnd_toEndOf="@+id/playerButtons"
            app:layout_constraintStart_toStartOf="@+id/imageView"
            app:layout_constraintTop_toTopOf="@+id/imageView"
            android:paddingBottom="77dp"/>

        <FrameLayout
            android:id="@+id/playerButtons"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <include android:id="@+id/playerButtonsFrame" layout="@layout/frame_players_buttons" />
        </FrameLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
