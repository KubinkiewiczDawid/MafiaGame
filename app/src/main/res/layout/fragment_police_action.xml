<?xml version="1.0" encoding="utf-8"?>
<layout>
    <RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/policeActionLayout">

        <ImageView
            android:layout_width="120dp"
            android:layout_height="360dp"
            android:background="@drawable/white_rectangle_with_black_boarder"
            android:backgroundTint="@color/darkerBlue"
            android:layout_centerInParent="true"/>

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Choose who to check"
            android:textColor="@color/white"
            android:fontFamily="@font/stencil1935"
            android:textSize="42sp"
            android:rotation="90"
            android:layout_centerVertical="true"
            android:layout_alignParentStart="true"
            android:layout_marginLeft="20dp"
            />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Choose who to check"
            android:textColor="@color/white"
            android:fontFamily="@font/stencil1935"
            android:textSize="42sp"
            android:rotation="270"
            android:layout_centerVertical="true"
            android:layout_alignParentEnd="true"
            android:layout_marginRight="20dp"
            />

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <include android:id="@+id/playerButtons" layout="@layout/frame_players_buttons" />
        </FrameLayout>

    </RelativeLayout>
</layout>