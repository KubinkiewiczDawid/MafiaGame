<?xml version="1.0" encoding="utf-8"?>
<layout>
    <RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/voteActionLayout">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/cardsParentLayout">

            <FrameLayout
                android:id="@+id/cardBackVoteLayout"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <include android:id="@+id/cardBackVoteFrame" layout="@layout/frame_card_voting_back" />
            </FrameLayout>

            <FrameLayout
                android:id="@+id/cardFrontVoteLayout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center">
                <include android:id="@+id/cardFrontVoteFrame" layout="@layout/frame_card_voting_front" />

            </FrameLayout>
        </RelativeLayout>

        <LinearLayout
            android:id="@+id/votingResultsLinearLayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_margin="20dp"
            android:orientation="vertical"/>

    </RelativeLayout>
</layout>
