<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:id="@+id/onboarding_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_centerInParent="true">

        <!-- TODO:  app:imageUrl="@{item.imageUrl}" binding adapter -->
        <ImageView
            android:id="@+id/onboarding_image"
            android:layout_width="132dp"
            android:layout_height="132dp"
            android:layout_gravity="center_horizontal"
            tools:src="@mipmap/ic_launcher"
            android:src="@mipmap/ic_launcher"
            />

        <TextView
            android:id="@+id/onboarding_label"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/onboarding_image"
            tools:text="Join games"
            android:text="@{item.label}"
            android:layout_marginTop="16dp"
            android:gravity="center"
            android:textSize="28sp"
            android:textColor="@color/black" />

        <TextView
            android:id="@+id/onboarding_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/onboarding_label"
            tools:text="Some example of very long very long very long very long very long very long very long very long very long very long very long very long text"
            android:layout_marginTop="16dp"
            android:text="@{item.content}"
            android:gravity="center"
            android:textSize="28sp"
            android:textColor="@color/black" />

    </LinearLayout>

</RelativeLayout>