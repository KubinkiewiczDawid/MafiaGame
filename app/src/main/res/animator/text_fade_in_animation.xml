<?xml version="1.0" encoding="utf-8"?>
<set xmlns:android="http://schemas.android.com/apk/res/android">

    <objectAnimator
        android:valueFrom="4"
        android:valueTo="1"
        android:propertyName="scaleX"
        android:duration="@integer/punch_anim_length" />

    <objectAnimator
        android:valueFrom="4"
        android:valueTo="1"
        android:propertyName="scaleY"
        android:duration="@integer/punch_anim_length" />

    <objectAnimator
        android:valueFrom="0.0"
        android:valueTo="1"
        android:propertyName="alpha"
        android:duration="@integer/punch_anim_face_in_length" />
</set>